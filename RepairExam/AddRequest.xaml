<Page x:Class="RepairExam.AddRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RepairExam"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRequest">

    <Grid Background="White">
        <StackPanel Width="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label  Content="Ваше ФИО"></Label>
            <TextBox Name="NameBox" />
            <Label Content="Ваш номер телефона"></Label>
            <TextBox Name="PhoneBox" />
            <Label Content="Оборудование"></Label>
            <TextBox Name="EquipmentBox" />
            <Button Click="AppendChanges" Content="Применить"></Button>
        </StackPanel>
        
    </Grid>
</Page>
